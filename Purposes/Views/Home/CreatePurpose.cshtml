@model Purpose
@{
    ViewData["Title"] = "CreatePurpose";
}

<h1>CreatePurpose</h1>

<form asp-action="CreatePurpose" asp-antiforgery="true">
    <div>
        <div class="form-group">
            <label asp-for="Name" class="control-label">Name</label>
            <input type="text" asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" />
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label">Description</label>
            <input type="text" asp-for="Description" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="Importance" class="control-label">Importance</label>
            <select asp-items="Html.GetEnumSelectList<Importance>()" asp-for="Importance" class="form-control">
                <option selected>
                    Choose importance
                </option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Due" class="control-label">Due Date</label>
            <input type="date" asp-for="Due" class="form-control"/>
        </div>
        <div class="form-group">
            <label asp-for="IsCompleted" class="control-label">Does this purpose complete?</label>
            <input type="checkbox" asp-for="IsCompleted" />
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Add purpose" />
        </div>
    </div>
</form>

