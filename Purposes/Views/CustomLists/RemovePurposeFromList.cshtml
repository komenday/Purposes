@model Purpose
@{
    ViewData["Title"] = "Remove Purpose From List";
}

<h1>Remove purpose from list</h1>

<div>
    <dl class="dl-horizontal">
        <dt>Name</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <div>
        <form asp-action="RemovePurposeFromList" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-warning" value="Remove" />
            </div>
        </form>
    </div>
</div>